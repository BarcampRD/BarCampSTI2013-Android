<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_view_background"
    android:padding="@dimen/list_view_item_padding">

    <ImageView
        android:id="@+id/speaker_photo"
        android:layout_width="@dimen/thumb_wsize"
        android:layout_height="@dimen/thumb_hsize"
        android:layout_margin="@dimen/thumb_margin"
        android:src="@drawable/ic_user"></ImageView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="20">

        <TextView
            android:id="@+id/full_name_label"
            android:text="@string/hello_world"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:lines="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"></TextView>

        <TextView
            android:id="@+id/description_label"
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:lines="3"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_below="@id/full_name_label">

        </TextView>

    </RelativeLayout>

    <ImageView
        android:src="@drawable/ic_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center">

    </ImageView>

</LinearLayout>