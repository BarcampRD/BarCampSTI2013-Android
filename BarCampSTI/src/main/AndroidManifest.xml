<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.barcamprd.android"
    android:versionCode="7"
    android:versionName="1.0.1">

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MyCompatTheme">
        <activity
            android:name="org.barcamprd.android.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.barcamprd.android.ScheduleDetailsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.barcamprd.android.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.barcamprd.android.HomeActivity" />
        </activity>
        <activity
            android:name="org.barcamprd.android.SpeakerDetailsActivity"
            android:label="@string/app_name"
            android:parentActivityName="org.barcamprd.android.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.barcamprd.android.HomeActivity" />
        </activity>
    </application>

</manifest>
